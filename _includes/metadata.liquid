        "publisher": { {# Note: a comma before "publisher" is needed if "author" was the last main property #}
          "@type": "Organization",
          "name": "{{ title }}",
          {% if site.og_image %}
          "logo": {
            "@type": "ImageObject",
            "url": "{{ site.og_image | absolute_url }}"
          }
          {% endif %}
        },
